<?xml version="1.0"?>
<!--
###################################################
##Add Block:
##	all types, 1 output, 2 to inf inputs
###################################################
 -->
<block>
	<name>Add</name>
	<key>gr_add_xx</key>
	<import>from gnuradio import basic</import>
	<make>basic.add(basic.$type.enum, $vlen)</make>
	<param>
		<name>IO Type</name>
		<key>type</key>
		<type>enum</type>
		<option>
			<name>FC32</name>
			<key>fc32</key>
			<opt>enum:ADD_FC32</opt>
		</option>
	</param>
	<param>
		<name>Num Inputs</name>
		<key>num_inputs</key>
		<value>2</value>
		<type>int</type>
	</param>
	<param>
		<name>Vec Length</name>
		<key>vlen</key>
		<value>1</value>
		<type>int</type>
	</param>
	<check>$num_inputs &gt; 1</check>
	<check>$vlen &gt; 0</check>
	<sink>
		<name>in</name>
		<type>$type</type>
		<vlen>$vlen</vlen>
		<nports>$num_inputs</nports>
	</sink>
	<source>
		<name>out</name>
		<type>$type</type>
		<vlen>$vlen</vlen>
	</source>
</block>
